{
	"name": "portfolio",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"next": "^16.1.1",
			"@trpc/server": "^11.7.2",
			"@trpc/client": "^11.7.2"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"check-types": "bun run --filter '*' check-types",
		"dev:native": "bun run --filter native dev",
		"dev:web": "bun run --filter web dev",
		"check": "biome check --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@portfolio/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@portfolio/config": "workspace:*",
		"@types/node": "^22.13.14",
		"babel-plugin-react-compiler": "^1.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.9"
}
